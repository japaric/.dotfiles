#!/bin/bash

# updates the rust nightly channel

set -ex

update_toolchain() {
    local tf=$(mktemp)
    rustup update nightly 2>&1 | tee $tf

    if cat $tf | grep -q 'nightly.*unchanged'; then
        rm $tf
        exit 0
    fi

    rm $tf
}

rebuild_packages() {
    cargo install -f --git https://github.com/japaric/mpc.rs &
    cargo install -f --git https://github.com/japaric/scripts &
    cargo install -f --git https://github.com/japaric/xargo &
    cargo install -f --git https://github.com/phildawes/racer &
    cargo install -f --git https://github.com/rust-lang-nursery/rustfmt &
    cargo install -f cargo-check &
    cargo install -f cargo-clone &
    cargo install -f cargo-edit &
    cargo install -f cargo-graph &
    cargo install -f cargo-outdated &
    cargo install -f cargo-watch &
    cargo install -f mdbook &

    pushd ~/rust/cargo-clippy
    git pull
    cargo clean
    cargo update
    # NOTE clippy breaks every now and then
    nice -n10 cargo build --release || true
    popd
}

fetch_src() {
    local hash=$(rustc -Vv | grep commit-hash | cut -d' ' -f2)

    if [ -d ~/rust/nightly ]; then
        chmod -R a+w ~/rust/nightly
        rm -r ~/rust/nightly
        mkdir ~/rust/nightly
    fi

    curl -sL https://github.com/rust-lang/rust/archive/$hash.tar.gz | \
        tar -xz -C ~/rust/nightly --strip-components 1

    rm -r ~/rust/nightly/src/test

    chmod -R a-w ~/rust/nightly
}

main() {
    update_toolchain
    rebuild_packages
    fetch_src
}

main
